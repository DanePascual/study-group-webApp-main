{
  "hosting": {
    "public": "frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "backend/**",
      "*.md"
    ],
    "rewrites": [
      {
        "source": "/profile/**",
        "destination": "/student/pages/profile.html"
      },
      {
        "source": "/student/pages/**",
        "destination": "/student/pages/login.html"
      }
    ]
  }
}
